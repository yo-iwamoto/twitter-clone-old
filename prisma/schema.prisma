generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Task {
  id     String     @id @default(uuid()) @map("id")
  title  String     @map("title")
  status TaskStatus @map("status")

  @@map("tasks")
}

enum TaskStatus {
  TODO
  COMPLETED
  ARCHIVED

  @@map("task_statuses")
}
